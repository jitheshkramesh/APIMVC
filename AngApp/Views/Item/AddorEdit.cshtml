                    <div class="form-group">
                        @Html.LabelFor(model => model.Item_Image, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <img src="@Url.Content(Model.Item_Image)" style="margin:10px;height:200px;width:200px;" id="imagePreview" />
