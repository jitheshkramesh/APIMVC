@model AngApp.Models.EmpDesignation
@{
    ViewBag.Title = "Designation";
    Layout = "~/Views/Shared/SubTheme.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<div class="form-horizontal">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.DG_ID)
        <div class="form-group">
            @Html.LabelFor(model => model.DG_CD, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DG_CD, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DG_CD, "", new { @class = "text-danger" })
            </div>
        </div>
          <div class="form-group">
            @Html.LabelFor(model => model.DG_DESCRIPTION, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DG_DESCRIPTION, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DG_DESCRIPTION, "", new { @class = "text-danger" })
            </div>
        </div>
          <div class="form-group">
              <div class="col-md-offset-2 col-md-10">
                  <input type="submit" value="submit" class="btn btn-default" />
                  <input type="reset" value="Reset" class="btn btn-reset" />
              </div>
          </div>
    }
          </div>
