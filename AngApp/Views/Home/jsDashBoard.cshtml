
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/SubTheme.cshtml";
}

<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/Chart.min.js"></script>
<style>
    #chart_container {
        width: 400px;
        height: 400px;
        border: 1px solid #ddd;
        padding: 1px;
        border-radius: 4px;
    }
</style>
<div id="chart_container">
    <canvas id="bar_chart"></canvas>
</div>
<br />
<div id="chart_container">
    @*<canvas id="myDoughnutChart"></canvas>*@
</div>

<script>

    var country =@Html.Raw(Json.Encode(ViewBag.Cnt));
    var repArray =@Html.Raw(Json.Encode(ViewBag.rep));

    var ctx = $("#bar_chart");
    var bar_Chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: country,
            datasets: [{
                label: "Employees ",
                data: repArray,
                backgroundColor: ["rgba(242,164,54,.5)", "rgba(145,65,72,.5)", "74,25,92,.5"],
                borderColor: ["rgba(242,166,54)", "rgba(145,65,72)", "rgb(74,25,92)"],
                borderWidth: 1
            }]
        },
        options: {
            maintainAspectRatio: false,
            scales: { xAxes: [{ ticks: { beginAtZero: true } }] },
            legend: { display: false }
        },
    });

    
</script>

